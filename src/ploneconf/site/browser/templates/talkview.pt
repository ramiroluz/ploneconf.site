<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ploneconf.site">
<body>
    <metal:content-core fill-slot="content-core">

        <tal:eventsummary replace="structure context/@@event_summary"/>

        <p>
            <strong tal:content="context/type_of_talk">
                Talk
            </strong>
        </p>
        <p>
            <strong tal:content="structure view/w/audience/label"/>:
            <span tal:replace="structure view/w/audience/render">
                Audience
            </span>
        </p>

        <p tal:condition="python:context.room">
            <strong tal:content="structure view/w/room/label"/>:
            <span  tal:content="structure view/w/room/render"/>
        </p>

        <div tal:content="structure view/w/details/render">
            Details
        </div>


        <div class="speakerinfo">
            <div class="newsImageContainer">
                <img tal:condition="python:getattr(context, 'image', None)"
                     tal:attributes="src string:${context/absolute_url}/@@images/image/thumb" />
            </div>
            <h3>
                <a class="email-link" tal:attributes="href string:mailto:${context/email}">
                    <strong tal:content="python:context.speaker">
                        Jane Doe
                    </strong>
                </a>
            </h3>
            <p tal:define="linktext python:context.company or context.website"
               tal:condition="python: linktext">
                <a tal:attributes="href python:context.website"
                   tal:omit-tag="python: not context.website">
                    <strong tal:content="linktext">
                        Global Corp.
                    </strong>
                </a>
            </p>
            <p tal:define="twitter python: context.twitter.replace(u'@', u'')"
               tal:condition="python:twitter">
                Twitter:
                <a tal:attributes="href python:u'https://twitter.com/@' + twitter">
                    <strong tal:content="python: twitter">
                        https://twitter.com/@StarzelDe
                    </strong>
                </a>
            </p>
            <p tal:define="github python: context.github"
               tal:condition="python:github">
                Github:
                <a tal:attributes="href python:u'https://github.com/' + github">
                    <strong tal:content="python: github">
                        https://github.com/pbauer
                    </strong>
                </a>
            </p>

            <div tal:content="structure view/w/speaker_biography/render">
                Biography
            </div>
        </div>

    </metal:content-core>
</body>
</html>
